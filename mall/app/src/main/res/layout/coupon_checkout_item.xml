<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_margin="@dimen/dp_5"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="@dimen/dp_5">


    <LinearLayout
        android:id="@+id/ll_coupon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/coupon_check_selector"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical"
               >

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_E4363F"
                    android:visibility="visible"
                    android:textSize="@dimen/sp_20"
                    android:layout_gravity="center_horizontal"
                    tools:text="¥ 10 元"/>

                <TextView
                    android:id="@+id/tv_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_E4363F"
                    android:visibility="visible"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="center_horizontal"
                    tools:text="满99元可用"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:visibility="visible"
                    android:textSize="@dimen/sp_20"
                    android:layout_gravity="center_horizontal"
                    tools:text="新用户优惠券"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_989DA7"
                    android:visibility="visible"
                    android:textSize="@dimen/sp_13"
                    android:layout_gravity="center_horizontal"
                    tools:text="有效期: 至 2020-11-07 16:44:56"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:gravity="center|left"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <CheckBox
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cb_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    app:buttonCompat="@drawable/checkbox_selector"
                    />

            </LinearLayout>

        </LinearLayout>


        <View style="@style/HorizontalLineStyle" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/dp_16"
            android:text="全场通用"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>