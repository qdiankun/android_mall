<?xml version="1.0" encoding="utf-8"?>
<!-- 下面示例中的值等于默认值 -->
<cn.ljp.swipemenu.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:isEnableLeftMenu="false"
    app:isEnableSwipe="true"
    app:isClickMenuAndClose="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="5dp"
        android:background="@color/white"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:gravity="center|left"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <CheckBox
                android:id="@+id/cb_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:buttonCompat="@drawable/checkbox_selector"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:gravity="center|left"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_address_name"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:gravity="center|left"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/black"
                tools:text="云端沙发组合"/>

            <TextView
                android:id="@+id/tv_address_detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:gravity="center|left"
                android:textSize="@dimen/sp_12"
                tools:text="云端沙发组合,你值得拥有"/>


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="@dimen/dp_80"
        android:gravity="center"
        android:layout_height="match_parent"
        android:background="#f00"
        android:textColor="@color/white"
        android:text="删除"/>

</cn.ljp.swipemenu.SwipeMenuLayout>